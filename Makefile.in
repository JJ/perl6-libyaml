SRC=src

all : lib

lib : resources/lib/libyaml_wrap%SO%

resources/lib/libyaml_wrap%SO% : $(SRC)/libyaml_wrap%O%
	%LD% %LDSHARED% %LDFLAGS% %LDOUT%resources/lib/libyaml_wrap%SO% $(SRC)/libyaml_wrap%O%

$(SRC)/libyaml_wrap%O% : $(SRC)/libyaml_wrap.c
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% %CCOUT%$(SRC)/libyaml_wrap%O% $(SRC)/libyaml_wrap.c

test : all
	@prove -e"perl6 -I lib" -v t

clean :
	@rm -f $(SRC)/*.o resources/lib/libyaml_wrap%SO%

realclean : clean
	@rm -f Makefile
